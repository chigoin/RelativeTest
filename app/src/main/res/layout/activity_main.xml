<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/one_tv1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#1099E4"
            android:gravity="center"
            android:text="1"
            android:textColor="#0E0E0D"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/one_tv2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/one_tv1"
            android:background="#10E425"
            android:gravity="center"
            android:text="2"
            android:textColor="#0E0E0D"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/one_tv3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/one_tv2"
            android:background="#E91E63"
            android:gravity="center"
            android:text="3"
            android:textColor="#0E0E0D"
            android:textSize="40sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:gravity="center">
<!--   android:layout_alignTop="@id/layout1"-->
<!--    与指定view的上边缘一致-->


        <TextView
            android:id="@+id/two_tv1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#1099E4"
            android:gravity="center"
            android:text="1"
            android:layout_alignParentLeft="true"
            android:textColor="#0E0E0D"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/two_tv2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/two_tv1"
            android:background="#10E425"
            android:gravity="center"
            android:text="2"
            android:textColor="#0E0E0D"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/two_tv3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="#E91E63"
            android:gravity="center"
            android:text="3"
            android:textColor="#0E0E0D"
            android:textSize="40sp" />

    </RelativeLayout>
</RelativeLayout>